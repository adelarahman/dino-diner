<Page x:Class="PointOfSale.CustomizeBrontowurst"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomizeBrontowurst">

    <DockPanel>
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="13">Add To Order</Label>
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="12">Customize Brontowurst</Label>
        <Button DockPanel.Dock="Bottom" Click="OnDone" FontSize="12" Margin="5" Background="GhostWhite" Height="75">Done</Button>
        <WrapPanel>
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="175"/>
                    <Setter Property="Height" Value="75"/>
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </WrapPanel.Resources>
            <Button Click="OnHoldWholeWheatBun" Margin="5">Hold Whole Wheat Bun</Button>
            <Button Click="OnHoldPeppers" Margin="5">Hold Peppers</Button>
            <Button Click="OnHoldOnion" Margin="5">Hold Onion</Button>
        </WrapPanel>
    </DockPanel>
</Page>

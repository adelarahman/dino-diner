<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuCategorySelection">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Center" FontSize="13" VerticalAlignment="Top">Add To Order</Label>
        <Button Click="SelectCombo" Margin="30" Grid.Column="0" Grid.Row="1">Combos</Button>
        <Button Click="SelectEntrees" Margin="30" Grid.Column="1" Grid.Row="1">Entrees</Button>
        <Button Click="SelectSides" Margin="30" Grid.Column="0" Grid.Row="2">Sides</Button>
        <Button Click="SelectDrink" Margin="30" Grid.Column="1" Grid.Row="2">Drink</Button>
    </Grid>
</Page>
